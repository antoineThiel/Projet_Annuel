{% extends 'base.html.twig' %}

{% block title %}Facture extérieure{% endblock %}

{% block body %}
    <h1>Facture extérieure</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ external_invoice.id }}</td>
            </tr>
            <tr>
                <th>Nom du fichier</th>
                <td>{{ external_invoice.invoiceFileName }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ external_invoice.ammount }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ external_invoice.date ? external_invoice.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('external_invoice_index') }}">Retour</a>

    <a href="{{ path('external_invoice_edit', {'id': external_invoice.id}) }}">Modifier</a>

    {{ include('external_invoice/_delete_form.html.twig') }}
{% endblock %}
