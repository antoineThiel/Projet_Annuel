<div class="card card-primary card-outline">
    <div class="card-header">
        <h3>Create new dish</h3>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        <div>
            {{ form_errors(form) }}
        </div>
        <div class="form-group">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group">
            {{ form_row(form.price) }}
        </div>
            {{ form_row(form.product) }}
        <div class="card-footer">
            <button class="btn btn-primary">Add</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>