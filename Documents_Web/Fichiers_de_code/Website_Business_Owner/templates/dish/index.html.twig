{% extends 'base.html.twig' %}
{% block content %}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    {% block title %}{% endblock %}
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('admin_home') }}">Accueil</a></li>
                        <li class="breadcrumb-item active">Plats</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Main content -->
    <section class="content">
        <h1>Liste des plats</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Nom du Plat</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for dish in dishes %}
                <tr>
                    <td>{{ dish.id }}</td>
                    <td>{{ dish.name }}</td>
                    <td>{{ dish.price }} €</td>
                    <td>
                        <a href="{{ path('dish_edit', {'id': dish.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Rien à afficher</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('dish_new') }}"><button class="btn btn-info ml-3 mr-1">Nouveau</button></a>
        <a href="{{ path('dish_trad') }}"><button class="btn btn-info ml3">Traductions</button></a>
    </section>
</div>
{% endblock %}
