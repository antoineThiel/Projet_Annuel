{% extends 'base.html.twig' %}
{% block content %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        {% block title %}{% endblock %}
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Starter Page</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- Main content -->
        <section class="content">
            <h1>Chiffre d'affaire totaux</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Montant total</th>
                    <th>Montant 4% total</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for turnover in turnoverTotal %}
                    <td>{{ turnover.date ? turnover.date|date('d/m/Y') : ''}}</td>
                    <td>{{ turnover.somme_amount }} €</td>
                    <td>{{ turnover.somme_percent }} €</td>
                    <td>Détail</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
    </div>
{% endblock %}