{% extends 'base.html.twig' %}

{#{% block title %}Rank index{% endblock %}#}

{%  block content %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        {% block title %}{% endblock %}
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('admin_home') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('rank_index') }}">Rangs</a></li>
                            <li class="breadcrumb-item active">DÃ©tail</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- Main content -->
        <section class="content">
            <h1>Liste des contenus des rangs</h1>

            <table class="table">
                <thead>
                    <tr>
                        {% for rank in ranks %}
                            <th class="{{ rank.title }}"><a href="{{ path('rank_edit', {'id': rank.id}) }}" title="modifier">{{ rank.title }}</a></th>
                        {% endfor %}

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {% for rank in ranks %}
                            {% if rank.id == '1' %}
                                <td>
                                    <div>
                                        {% for franchisee in rank.franchisee %}
                                            <p>{{ franchisee.lastName }} {{ franchisee.firstName }}</p>
                                        {% endfor %}
                                    </div>
                                </td>
                            {% elseif rank.id == '2' %}
                                <td>
                                    <div>
                                        {% for franchisee in rank.franchisee %}
                                            <p>{{ franchisee.lastName }} {{ franchisee.firstName }}</p>
                                        {% endfor %}
                                    </div>
                                </td>
                            {%  elseif rank.id == '3' %}
                                <td>
                                    <div>
                                        {% for franchisee in rank.franchisee %}
                                            <p>{{ franchisee.lastName }} {{ franchisee.firstName }}</p>
                                        {% endfor %}
                                    </div>
                                </td>
                            {% elseif rank.id == '4' %}
                                <td>
                                    <div>
                                        {% for franchisee in rank.franchisee %}
                                            <p>{{ franchisee.lastName }} {{ franchisee.firstName }}</p>
                                        {% endfor %}
                                    </div>
                                </td>
                            {% endif %}
                    {% endfor %}
                </tr>

                </tbody>
            </table>

            <a href="{{ path('rank_index') }}">Retour</a>
        </section>
    </div>
{% endblock %}
