{% extends 'base.html.twig' %}
{% block content %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        {% block title %}{% endblock %}
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Franchisés</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- Main content -->
        <section class="content">
            <h1>Franchisés</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom de famille</th>
                    <th>Prénom</th>
                    <th>Mail</th>
                    <th>Ville</th>
                    <th>Code Postal</th>
                    <th>Adresse</th>
                    <th>N°Permis</th>
                    <th>Portable</th>
                    <th>Camions</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for franchisee in franchisees %}
                    {% if franchisee.truck == NULL %}
                        <tr style="background-color: #E5735E;">
                    {% else %}
                        <tr>
                    {% endif %}
                    <td>{{ franchisee.id }}</td>
                    <td>{{ franchisee.lastName }}</td>
                    <td>{{ franchisee.firstName }}</td>
                    <td>{{ franchisee.mail }}</td>
                    <td>{{ franchisee.city }}</td>
                    <td>{{ franchisee.postalCode }}</td>
                    <td>{{ franchisee.address }}</td>
                    <td>{{ franchisee.license }}</td>
                    <td>{{ franchisee.phone }}</td>
                    <td>{{ franchisee.truck }}</td>
                    <td>
                        <a href="{{ path('franchisee_edit', {'id': franchisee.id}) }}">edit</a>
                    </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('franchisee_export') }}"><button class="btn btn-info ml-2">Export PDF</button></a>
    </section>
</div>
{% endblock %}
