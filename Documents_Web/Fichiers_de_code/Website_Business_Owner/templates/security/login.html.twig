{% extends 'base_front.html.twig' %}

{% block content %}
    <!-- /.login-logo -->
    <div class="login connexion_card card p-4 navbar-light" style="background-color: #80c2e0; margin:2% 35% 2% 35%; border: #FFF0A5 2px solid;" >
        <div class="login-logo">
            <a href="#"><b>DRIV'N </b>COOK</a>
        </div>
        <div class="d-flex justify-content-center m-2 pb-2">
            <div class="brand_logo_container">
                <img src="{{ asset('Images/logo2.png') }}" alt="Home" class="brand-image rounded-circle z-depth-3">
            </div>
        </div>
        <p class="login-box-msg">Sign in to start your session</p>
        <div class="d-flex justify-content-center form_container m-2">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="input-group mb-3">
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-at" style="color: #E5735E;"></i></span>
                    </div>
                    <input type="text" class="form-control" placeholder="Email" name="username" id="inputUsername" value="{{ last_username }}" required autofocus>
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-key" style="color: #E5735E;"></i></span>
                    </div>
                    <input type="password" class="form-control" placeholder="Password" name="password" id="inputPassword" required>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="d-flex justify-content-center mt-3 login_container">
                    <button type="submit" name="button" class="btn login_btn " style="background-color:#FFF0A5; "> Connexion </button>
                </div>
            </form>
        </div>
        <div class="mt-3">
            <div class="d-flex justify-content-center links">
                <a href="#" class="blue-text">Mot de passe oubli√© ?</a>
            </div>
        </div>
        <!-- /.login-card-body -->
    </div>
<!-- /.login-box -->
{% endblock %}
