{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ order.date ? order.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ order.ammount }}€</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index') }}">Retour</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}">Modifier</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
