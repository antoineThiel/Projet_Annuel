{% extends 'base_front.html.twig' %}
{% block content %}
<div class="ml-5 mr-5">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    {% block title %}{% endblock %}
                </div><!-- /.col -->
                <!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Main content -->
    <section class="content">
    <h1>FranchiseeComplaint</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ franchisee_complaint.id }}</td>
            </tr>
            <tr>
                <th>Franchisé</th>
                <td>{{ franchisee_complaint.franchisee }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ franchisee_complaint.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ franchisee_complaint.content }}</td>
            </tr>
            <tr>
                <th>Réponse</th>
                <td>{{ franchisee_complaint.answer }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                {% if (franchisee_complaint.isNew) %}
                    <td>Demander à nouveau</td>
                {% elseif (franchisee_complaint.isOngoing) %}
                    <td>En cours</td>
                {% else %}
                    <td>Clos</td>
                {% endif %}
            </tr>
        </tbody>
    </table>
    </section>
</div>
{% endblock %}
