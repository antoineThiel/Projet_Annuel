<div class="card card-primary card-outline">
    <div class="card-header">
        {% if(app.request.attributes.get('_route') == 'product_new') %}
            <h3>Create product</h3>
        {% else %}
            <h3>Edit Product</h3>
        {% endif %}
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        <div>
            {{ form_errors(form) }}
        </div>
        <div class="form-group">
            {{ form_row(form.name) }}
            {% if (app.request.attributes.get('_route') == 'product_edit') %}
                <div id="divTrad">

                </div>
                <div class="row">
                    <div class="ml-2 col-sm-1 btn-info" id="En" onclick="addTrad('en', 'name')">Add Trans En</div>
                    <div class="ml-1 col-sm-1 btn-info" id="Es" onclick="addTrad('es', 'name')">Add Trans Es</div>
                </div>

            {% endif %}
        </div>
        <div class="form-group">
            {{ form_row(form.price) }}
        </div>
        <div class="form-group">
            {{ form_row(form.category) }}
        </div>
        <div class="form-group">
            {{ form_row(form.origin) }}
        </div>
        <div class="row">
            {{ form_row(form.save) }}
        </div>

        {{ form_end(form) }}
    </div>
{{ encore_entry_script_tags('trad') }}
</div>
