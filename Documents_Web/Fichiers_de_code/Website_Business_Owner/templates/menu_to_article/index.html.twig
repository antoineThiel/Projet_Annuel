{% extends 'base.html.twig' %}

{% block title %}MenuToArticle index{% endblock %}

{% block body %}
    <h1>MenuToArticle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu_to_article in menu_to_articles %}
            <tr>
                <td>{{ menu_to_article.id }}</td>
                <td>{{ menu_to_article.quantity }}</td>
                <td>
                    <a href="{{ path('menu_to_article_show', {'id': menu_to_article.id}) }}">show</a>
                    <a href="{{ path('menu_to_article_edit', {'id': menu_to_article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('menu_to_article_new') }}">Create new</a>
{% endblock %}
